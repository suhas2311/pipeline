pipeline {
  agent any
  options([parameters([choice(choices: ['BUILD', 'DEPLOY', 'TEST'], description: 'Select the stage you want to run', name: 'Stage')])]) 
    stages {
      stage ('BUILD') {
        steps {
          echo 'this is build stage'
        }
      }  
      stage ('DEPLOY') {
        steps {
        echo 'this is deploy stage'
        }
      }
      stage ('TEST') {
        steps {
        echo 'this is test'
        }
     }
    } 
  }
  
    
