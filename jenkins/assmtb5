boolean testPassed = true
pipeline {
  agent any
   stages {
    stage ('BUILD') {
      steps {
        echo " this is build "
        catchError(testPassed = true)
  }
}
    stage ('DEPLOY') {
        when {
         expression { if(testPassed == 'true') }
        }
            steps {
                  echo 'this is deploy'
                }
              }
       stage ('TEST') {
        when {
         expression { if(testPassed == 'true') }
        }
            steps {
                  echo 'this is test'
                }
              }
      } 
    }

    
