boolean testPassed = true
pipeline {
  agent any
   stages {
    stage ('BUILD') {
      steps {
        script{
          try{
            echo " this is build stage" 
            sh 'exit 1'  
          }
          catch(Exception e){testPassed=false}
       }
      }
    }  
    stage ('DEPLOY') {
        when {
         expression {testPassed == 'true' }
        }
            steps {
                  echo 'this is deploy'
                }
              }
       stage ('TEST') {
        when {
         expression {testPassed == 'false' }
        }
            steps {
                  echo 'this is test'
                }
              }
      } 
    }

    
