boolean testPassed = true
pipeline {
  agent any
   stages {
    stage ('BUILD') {
      steps {
        echo " this is build "
        catchError(testPassed = false)
  }
}
    stage ('DEPLOY') {
        when {
         expression { $testPassed == 'true' }
        }
            steps {
                  echo 'this is deploy'
                }
              }
       stage ('TEST') {
        when {
         expression { $testPassed == 'false' }
        }
            steps {
                  echo 'this is test'
                }
              }
      } 
    }

    
