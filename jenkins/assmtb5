boolean testPassed = true
pipeline {
  agent any
   stages {
    stage ('BUILD') {
      steps {
        catchError(stageResult: 'FAILURE' testPassed =false){
          echo "buid is success"
        }
    }
  }
    stage ('DEPLOY') {
        when {
         expression { testPassed == 'true' }
        }
            steps {
                  echo 'this is deploy'
                }
              }
       stage ('TEST') {
        when {
         expression { testPassed == 'false' }
        }
            steps {
                  echo 'this is test'
                }
              }
      } 
    }

    
