boolean testPassed = true
pipeline {
  agent any
   stages {
    stage ('BUILD') {
      steps {
        catchError(testPassed = true)
        echo " this is buiild stage"   
  }
}
    stage ('DEPLOY') {
        when {
         expression {testPassed == 'true' }
        }
            steps {
                  echo 'this is deploy'
                }
              }
       stage ('TEST') {
        when {
         expression {testPassed == 'true' }
        }
            steps {
                  echo 'this is test'
                }
              }
      } 
    }

    
